<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Yeni Admin Ekle</h2>
                    
                    <% if (messages.success && messages.success.length > 0) { %>
                        <div class="alert alert-success">
                            <%= messages.success %>
                        </div>
                    <% } %>
                    <% if (messages.error && messages.error.length > 0) { %>
                        <div class="alert alert-danger">
                            <%= messages.error %>
                        </div>
                    <% } %>

                    <form action="/admin/admin_ekle" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="isim" class="form-label">İsim</label>
                            <input type="text" class="form-control" id="isim" name="isim" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="soyisim" class="form-label">Soyisim</label>
                            <input type="text" class="form-control" id="soyisim" name="soyisim" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="tcNo" class="form-label">TC Kimlik No</label>
                            <input type="text" class="form-control" id="tcNo" name="tcNo" 
                                   pattern="[0-9]{11}" title="TC Kimlik No 11 haneli olmalıdır" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="aileLakabi" class="form-label">Aile Lakabı</label>
                            <input type="text" class="form-control" id="aileLakabi" name="aileLakabi" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="sifre" class="form-label">Şifre</label>
                            <input type="password" class="form-control" id="sifre" name="sifre" 
                                   minlength="6" required>
                            <small class="text-muted">Şifre en az 6 karakter olmalıdır</small>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">Admin Ekle</button>
                    </form>
                    
                    <div class="text-center mt-3">
                        <a href="/admin/panel" class="btn btn-outline-secondary">Admin Paneline Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 