<%- contentFor('body') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Grup Düzenle: <%= grup.isim %></h2>
                </div>
                <div class="card-body">
                    <form action="/admin/grup-duzenle/<%= grup._id %>" method="POST">
                        <div class="mb-3">
                            <label for="isim" class="form-label">Grup Adı</label>
                            <input type="text" class="form-control" id="isim" name="isim" value="<%= grup.isim %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="aciklama" class="form-label">Açıklama</label>
                            <textarea class="form-control" id="aciklama" name="aciklama" rows="3" required><%= grup.aciklama %></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="uyeler" class="form-label">Üyeler</label>
                            <select class="form-select" id="uyeler" name="uyeler" multiple>
                                <% uyeler.forEach(uye => { %>
                                    <option value="<%= uye._id %>" 
                                        <%= grup.uyeler.includes(uye._id) ? 'selected' : '' %>>
                                        <%= uye.isim %> <%= uye.soyisim %> (<%= uye.email %>)
                                    </option>
                                <% }); %>
                            </select>
                            <small class="text-muted">Birden fazla üye seçmek için CTRL tuşuna basılı tutarak seçim yapın.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Değişiklikleri Kaydet
                            </button>
                            <a href="/admin/gruplar" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Gruplar Sayfasına Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 