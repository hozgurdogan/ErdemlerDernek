<%- contentFor('body') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">Admin Paneli</h2>

            <% if (messages.success && messages.success.length > 0) { %>
                <div class="alert alert-success">
                    <%= messages.success %>
                </div>
            <% } %>
            <% if (messages.error && messages.error.length > 0) { %>
                <div class="alert alert-danger">
                    <%= messages.error %>
                </div>
            <% } %>

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <!-- Anı Yönetimi -->
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-book fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Anı İşlemleri</h5>
                            <p class="card-text">Anıları görüntüle, onayla veya reddet.</p>
                            <div class="d-grid gap-2">
                                <a href="/anilar/admin/liste" class="btn btn-primary">
                                    <i class="fas fa-list"></i> Anı Listesi
                                </a>
                                <a href="/anilar/admin/bekleyen" class="btn btn-outline-warning">
                                    <i class="fas fa-clock"></i> Bekleyen Anılar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Etkinlik Yönetimi -->
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-calendar-alt fa-3x text-success mb-3"></i>
                            <h5 class="card-title">Etkinlik Yönetimi</h5>
                            <p class="card-text">Etkinlikleri ekle, düzenle ve yönet.</p>
                            <div class="d-grid gap-2">
                                <a href="/etkinlikler/admin/liste" class="btn btn-success">
                                    <i class="fas fa-list"></i> Etkinlik Listesi
                                </a>
                                <a href="/etkinlikler/admin/ekle" class="btn btn-outline-success">
                                    <i class="fas fa-plus"></i> Yeni Etkinlik Ekle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Duyuru Yönetimi -->
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-bullhorn fa-3x text-danger mb-3"></i>
                            <h5 class="card-title">Duyuru Yönetimi</h5>
                            <p class="card-text">Duyuruları ekle, düzenle ve yönet.</p>
                            <div class="d-grid gap-2">
                                <a href="/duyurular/admin/liste" class="btn btn-danger">
                                    <i class="fas fa-list"></i> Duyuru Listesi
                                </a>
                                <a href="/duyurular/admin/ekle" class="btn btn-outline-danger">
                                    <i class="fas fa-plus"></i> Yeni Duyuru Ekle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Aidat Yönetimi -->
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-money-bill-wave fa-3x text-warning mb-3"></i>
                            <h5 class="card-title">Aidat Yönetimi</h5>
                            <p class="card-text">Aidat ödemelerini görüntüle ve yönet.</p>
                            <div class="d-grid gap-2">
                                <a href="/admin/aidat" class="btn btn-warning text-white">
                                    <i class="fas fa-list"></i> Aidat Listesi
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Kullanıcı Yönetimi -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="feature-icon-small d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-4 rounded-3 me-3">
                                    <i class="fas fa-users"></i>
                                </div>
                                <h3 class="card-title mb-0">Kullanıcı Yönetimi</h3>
                            </div>
                            <p class="card-text">Kullanıcıları görüntüle, düzenle ve yönet.</p>
                            <div class="d-grid gap-2">
                                <a href="/admin/kullanicilar" class="btn btn-primary">
                                    <i class="fas fa-list me-2"></i>Kullanıcı Listesi
                                </a>
                                <a href="/admin/kullanici-ekle" class="btn btn-success">
                                    <i class="fas fa-user-plus me-2"></i>Admin Ekle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Grup Yönetimi -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="feature-icon-small d-inline-flex align-items-center justify-content-center text-bg-info bg-gradient fs-4 rounded-3 me-3">
                                    <i class="fas fa-users-cog"></i>
                                </div>
                                <h3 class="card-title mb-0">Grup Yönetimi</h3>
                            </div>
                            <p class="card-text">Kullanıcı gruplarını oluştur ve yönet.</p>
                            <div class="d-grid gap-2">
                                <a href="/admin/gruplar" class="btn btn-info text-white">
                                    <i class="fas fa-list me-2"></i>Grup Listesi
                                </a>
                                <a href="/admin/grup-ekle" class="btn btn-outline-info">
                                    <i class="fas fa-plus me-2"></i>Yeni Grup Oluştur
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 