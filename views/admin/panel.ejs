<%- contentFor('body') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">Admin Paneli</h2>

            <% if (messages.success && messages.success.length > 0) { %>
                <div class="alert alert-success">
                    <%= messages.success %>
                </div>
            <% } %>
            <% if (messages.error && messages.error.length > 0) { %>
                <div class="alert alert-danger">
                    <%= messages.error %>
                </div>
            <% } %>

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <!-- Anı Yönetimi -->
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <i class="fas fa-book fa-3x text-indigo mb-3"></i>
                            <h5 class="card-title">Anı İşlemleri</h5>
                            <p class="card-text">Anıları görüntüle, onayla veya reddet.</p>
                            <div class="d-grid gap-2">
                                <a href="/anilar/admin/liste" class="btn btn-indigo">
                                    <i class="fas fa-list"></i> Anı Listesi
                                </a>
                                <a href="/anilar/admin/bekleyen" class="btn btn-outline-indigo">
                                    <i class="fas fa-clock"></i> Bekleyen Anılar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Etkinlik Yönetimi -->
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <i class="fas fa-calendar-alt fa-3x text-teal mb-3"></i>
                            <h5 class="card-title">Etkinlik Yönetimi</h5>
                            <p class="card-text">Etkinlikleri ekle, düzenle ve yönet.</p>
                            <div class="d-grid gap-2">
                                <a href="/etkinlikler/admin/liste" class="btn btn-teal">
                                    <i class="fas fa-list"></i> Etkinlik Listesi
                                </a>
                                <a href="/etkinlikler/admin/ekle" class="btn btn-outline-teal">
                                    <i class="fas fa-plus"></i> Yeni Etkinlik Ekle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Duyuru Yönetimi -->
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <i class="fas fa-bullhorn fa-3x text-purple mb-3"></i>
                            <h5 class="card-title">Duyuru Yönetimi</h5>
                            <p class="card-text">Duyuruları ekle, düzenle ve yönet.</p>
                            <div class="d-grid gap-2">
                                <a href="/duyurular/admin/liste" class="btn btn-purple">
                                    <i class="fas fa-list"></i> Duyuru Listesi
                                </a>
                                <a href="/duyurular/admin/ekle" class="btn btn-outline-purple">
                                    <i class="fas fa-plus"></i> Yeni Duyuru Ekle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Aidat Yönetimi -->
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <i class="fas fa-money-bill-wave fa-3x text-orange mb-3"></i>
                            <h5 class="card-title">Aidat Yönetimi</h5>
                            <p class="card-text">Aidat ödemelerini görüntüle ve yönet.</p>
                            <div class="d-grid gap-2">
                                <a href="/admin/aidat" class="btn btn-orange">
                                    <i class="fas fa-list"></i> Aidat Listesi
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Kullanıcı Yönetimi -->
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <i class="fas fa-users fa-3x text-blue mb-3"></i>
                            <h5 class="card-title">Kullanıcı Yönetimi</h5>
                            <p class="card-text">Kullanıcıları görüntüle, düzenle ve yönet.</p>
                            <div class="d-grid gap-2">
                                <a href="/admin/kullanicilar" class="btn btn-blue">
                                    <i class="fas fa-list me-2"></i>Kullanıcı Listesi
                                </a>
                                <a href="/admin/kullanici-ekle" class="btn btn-outline-blue">
                                    <i class="fas fa-user-plus me-2"></i>Admin Ekle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Grup Yönetimi -->
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <i class="fas fa-users-cog fa-3x text-cyan mb-3"></i>
                            <h5 class="card-title">Grup Yönetimi</h5>
                            <p class="card-text">Kullanıcı gruplarını oluştur ve yönet.</p>
                            <div class="d-grid gap-2">
                                <a href="/admin/gruplar" class="btn btn-cyan">
                                    <i class="fas fa-list me-2"></i>Grup Listesi
                                </a>
                                <a href="/admin/grup-ekle" class="btn btn-outline-cyan">
                                    <i class="fas fa-plus me-2"></i>Yeni Grup Oluştur
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Özel Renkler */
.text-indigo { color: #6610f2; }
.text-teal { color: #20c997; }
.text-purple { color: #6f42c1; }
.text-orange { color: #fd7e14; }
.text-blue { color: #0d6efd; }
.text-cyan { color: #0dcaf0; }

/* Buton Stilleri */
.btn-indigo { background-color: #6610f2; color: white; }
.btn-indigo:hover { background-color: #520dc2; color: white; }
.btn-outline-indigo { color: #6610f2; border-color: #6610f2; }
.btn-outline-indigo:hover { background-color: #6610f2; color: white; }

.btn-teal { background-color: #20c997; color: white; }
.btn-teal:hover { background-color: #1ba37e; color: white; }
.btn-outline-teal { color: #20c997; border-color: #20c997; }
.btn-outline-teal:hover { background-color: #20c997; color: white; }

.btn-purple { background-color: #6f42c1; color: white; }
.btn-purple:hover { background-color: #5a32a3; color: white; }
.btn-outline-purple { color: #6f42c1; border-color: #6f42c1; }
.btn-outline-purple:hover { background-color: #6f42c1; color: white; }

.btn-orange { background-color: #fd7e14; color: white; }
.btn-orange:hover { background-color: #dc6a02; color: white; }

.btn-blue { background-color: #0d6efd; color: white; }
.btn-blue:hover { background-color: #0a58ca; color: white; }
.btn-outline-blue { color: #0d6efd; border-color: #0d6efd; }
.btn-outline-blue:hover { background-color: #0d6efd; color: white; }

.btn-cyan { background-color: #0dcaf0; color: white; }
.btn-cyan:hover { background-color: #0aa2c0; color: white; }
.btn-outline-cyan { color: #0dcaf0; border-color: #0dcaf0; }
.btn-outline-cyan:hover { background-color: #0dcaf0; color: white; }

/* Kart Hover Efekti */
.card {
    transition: transform 0.2s ease-in-out;
}
.card:hover {
    transform: translateY(-5px);
}
</style> 