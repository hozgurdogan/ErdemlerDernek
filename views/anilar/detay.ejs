<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <% if (ani.gorsel) { %>
                    <img src="<%= ani.gorsel %>" class="card-img-top" alt="<%= ani.baslik %>">
                <% } %>
                <div class="card-body">
                    <h1 class="card-title mb-4"><%= ani.baslik %></h1>
                    
                    <div class="card-text mb-4" style="white-space: pre-line;">
                        <%= ani.icerik %>
                    </div>

                    <div class="border-top pt-3 mt-4">
                        <div class="d-flex justify-content-between align-items-center text-muted">
                            <div>
                                <i class="fas fa-user"></i> <%= ani.paylasanId.isim + ' ' + ani.paylasanId.soyisim %>
                            </div>
                            <div>
                                <i class="fas fa-calendar"></i> <%= new Date(ani.paylasimTarihi).toLocaleDateString('tr-TR') %>
                            </div>
                            <div>
                                <i class="fas fa-eye"></i> <%= ani.goruntulemeSayisi %> görüntüleme
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="/anilar" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Anılar Sayfasına Dön
                </a>
            </div>
        </div>
    </div>
</div> 