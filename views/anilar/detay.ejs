<%- contentFor('body') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <% if (ani.gorsel) { %>
                    <img src="<%= ani.gorsel %>" class="card-img-top" alt="<%= ani.baslik %>">
                <% } %>
                
                <div class="card-body">
                    <h1 class="card-title mb-4"><%= ani.baslik %></h1>
                    
                    <div class="mb-4">
                        <small class="text-muted">
                            <i class="fas fa-user"></i> 
                            <% if (ani.paylasanKullanici) { %>
                                <%= ani.paylasanKullanici.isim %> <%= ani.paylasanKullanici.soyisim %>
                            <% } else { %>
                                Kullanıcı Silinmiş
                            <% } %>
                            <br>
                            <i class="fas fa-clock"></i> 
                            <%= new Date(ani.olusturmaTarihi).toLocaleDateString('tr-TR') %>
                        </small>
                    </div>

                    <div class="card-text mb-4">
                        <%- ani.icerik.replace(/\n/g, '<br>') %>
                    </div>

                    <div class="d-grid gap-2">
                        <a href="/anilar" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Anılar Sayfasına Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 