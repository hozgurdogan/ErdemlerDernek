<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">Duyurular</h2>

            <% if (messages.success && messages.success.length > 0) { %>
                <div class="alert alert-success">
                    <%= messages.success %>
                </div>
            <% } %>
            <% if (messages.error && messages.error.length > 0) { %>
                <div class="alert alert-danger">
                    <%= messages.error %>
                </div>
            <% } %>

            <% if (duyurular && duyurular.length > 0) { %>
                <!-- Acil Duyurular -->
                <% const acilDuyurular = duyurular.filter(d => d.onemDurumu === 'acil'); %>
                <% if (acilDuyurular.length > 0) { %>
                    <div class="mb-4">
                        <h4 class="text-danger mb-3">
                            <i class="fas fa-exclamation-triangle"></i> Acil Duyurular
                        </h4>
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            <% acilDuyurular.forEach(function(duyuru) { %>
                                <div class="col">
                                    <div class="card h-100 border-danger">
                                        <% if (duyuru.gorsel) { %>
                                            <img src="<%= duyuru.gorsel %>" class="card-img-top" alt="<%= duyuru.baslik %>" style="height: 200px; object-fit: cover;">
                                        <% } %>
                                        <div class="card-body">
                                            <h5 class="card-title text-danger">
                                                <i class="fas fa-exclamation-circle"></i>
                                                <%= duyuru.baslik %>
                                            </h5>
                                            <p class="card-text text-muted" style="height: 4.5em; overflow: hidden;">
                                                <%= duyuru.icerik %>
                                            </p>
                                            <div class="text-muted small mb-3">
                                                <i class="far fa-clock"></i> 
                                                <%= new Date(duyuru.olusturmaTarihi).toLocaleDateString('tr-TR') %>
                                            </div>
                                            <a href="/duyurular/<%= duyuru._id %>" class="btn btn-outline-danger stretched-link">
                                                Devamını Oku
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <!-- Önemli Duyurular -->
                <% const onemliDuyurular = duyurular.filter(d => d.onemDurumu === 'onemli'); %>
                <% if (onemliDuyurular.length > 0) { %>
                    <div class="mb-4">
                        <h4 class="text-warning mb-3">
                            <i class="fas fa-star"></i> Önemli Duyurular
                        </h4>
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            <% onemliDuyurular.forEach(function(duyuru) { %>
                                <div class="col">
                                    <div class="card h-100 border-warning">
                                        <% if (duyuru.gorsel) { %>
                                            <img src="<%= duyuru.gorsel %>" class="card-img-top" alt="<%= duyuru.baslik %>" style="height: 200px; object-fit: cover;">
                                        <% } %>
                                        <div class="card-body">
                                            <h5 class="card-title text-warning">
                                                <i class="fas fa-star"></i>
                                                <%= duyuru.baslik %>
                                            </h5>
                                            <p class="card-text text-muted" style="height: 4.5em; overflow: hidden;">
                                                <%= duyuru.icerik %>
                                            </p>
                                            <div class="text-muted small mb-3">
                                                <i class="far fa-clock"></i> 
                                                <%= new Date(duyuru.olusturmaTarihi).toLocaleDateString('tr-TR') %>
                                            </div>
                                            <a href="/duyurular/<%= duyuru._id %>" class="btn btn-outline-warning stretched-link">
                                                Devamını Oku
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <!-- Normal Duyurular -->
                <% const normalDuyurular = duyurular.filter(d => d.onemDurumu === 'normal'); %>
                <% if (normalDuyurular.length > 0) { %>
                    <div>
                        <h4 class="text-primary mb-3">
                            <i class="fas fa-bullhorn"></i> Diğer Duyurular
                        </h4>
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            <% normalDuyurular.forEach(function(duyuru) { %>
                                <div class="col">
                                    <div class="card h-100">
                                        <% if (duyuru.gorsel) { %>
                                            <img src="<%= duyuru.gorsel %>" class="card-img-top" alt="<%= duyuru.baslik %>" style="height: 200px; object-fit: cover;">
                                        <% } %>
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= duyuru.baslik %>
                                            </h5>
                                            <p class="card-text text-muted" style="height: 4.5em; overflow: hidden;">
                                                <%= duyuru.icerik %>
                                            </p>
                                            <div class="text-muted small mb-3">
                                                <i class="far fa-clock"></i> 
                                                <%= new Date(duyuru.olusturmaTarihi).toLocaleDateString('tr-TR') %>
                                            </div>
                                            <a href="/duyurular/<%= duyuru._id %>" class="btn btn-outline-primary stretched-link">
                                                Devamını Oku
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-bullhorn fa-4x text-muted"></i>
                    </div>
                    <h4>Henüz duyuru bulunmuyor</h4>
                    <p class="text-muted">Yakında yeni duyurular eklenecektir.</p>
                </div>
            <% } %>
        </div>
    </div>
</div> 