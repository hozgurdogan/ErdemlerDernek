<%- contentFor('body') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-center mb-4">
                <i class="fas fa-bullhorn fa-2x text-primary me-3"></i>
                <h2 class="mb-0">Duyurular</h2>
            </div>

            <% if (messages.success && messages.success.length > 0) { %>
                <div class="alert alert-success">
                    <%= messages.success %>
                </div>
            <% } %>
            <% if (messages.error && messages.error.length > 0) { %>
                <div class="alert alert-danger">
                    <%= messages.error %>
                </div>
            <% } %>

            <% if (duyurular && duyurular.length > 0) { %>
                <!-- Acil Duyurular -->
                <% const acilDuyurular = duyurular.filter(d => d.onemDurumu === 'acil'); %>
                <% if (acilDuyurular.length > 0) { %>
                    <div class="mb-5">
                        <div class="d-flex align-items-center mb-4">
                            <div class="bg-danger rounded-circle p-2 me-2">
                                <i class="fas fa-exclamation-triangle text-white"></i>
                            </div>
                            <h4 class="text-danger mb-0">Acil Duyurular</h4>
                        </div>
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            <% acilDuyurular.forEach(function(duyuru) { %>
                                <div class="col">
                                    <div class="card h-100 shadow-sm border-0 rounded-4 hover-shadow">
                                        <% if (duyuru.gorsel) { %>
                                            <img src="<%= duyuru.gorsel %>" class="card-img-top rounded-top-4" alt="<%= duyuru.baslik %>" style="height: 200px; object-fit: cover;">
                                        <% } %>
                                        <div class="card-body p-4">
                                            <div class="d-flex align-items-center mb-3">
                                                <span class="badge bg-danger me-2">Acil</span>
                                                <small class="text-muted">
                                                    <i class="far fa-clock me-1"></i>
                                                    <%= new Date(duyuru.olusturmaTarihi).toLocaleDateString('tr-TR') %>
                                                </small>
                                            </div>
                                            <h5 class="card-title mb-3"><%= duyuru.baslik %></h5>
                                            <p class="card-text text-muted mb-4" style="height: 4.5em; overflow: hidden;">
                                                <%= duyuru.icerik %>
                                            </p>
                                            <a href="/duyurular/<%= duyuru._id %>" class="btn btn-danger rounded-pill px-4">
                                                Devamını Oku <i class="fas fa-arrow-right ms-2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <!-- Önemli Duyurular -->
                <% const onemliDuyurular = duyurular.filter(d => d.onemDurumu === 'onemli'); %>
                <% if (onemliDuyurular.length > 0) { %>
                    <div class="mb-5">
                        <div class="d-flex align-items-center mb-4">
                            <div class="bg-warning rounded-circle p-2 me-2">
                                <i class="fas fa-star text-white"></i>
                            </div>
                            <h4 class="text-warning mb-0">Önemli Duyurular</h4>
                        </div>
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            <% onemliDuyurular.forEach(function(duyuru) { %>
                                <div class="col">
                                    <div class="card h-100 shadow-sm border-0 rounded-4 hover-shadow">
                                        <% if (duyuru.gorsel) { %>
                                            <img src="<%= duyuru.gorsel %>" class="card-img-top rounded-top-4" alt="<%= duyuru.baslik %>" style="height: 200px; object-fit: cover;">
                                        <% } %>
                                        <div class="card-body p-4">
                                            <div class="d-flex align-items-center mb-3">
                                                <span class="badge bg-warning me-2">Önemli</span>
                                                <small class="text-muted">
                                                    <i class="far fa-clock me-1"></i>
                                                    <%= new Date(duyuru.olusturmaTarihi).toLocaleDateString('tr-TR') %>
                                                </small>
                                            </div>
                                            <h5 class="card-title mb-3"><%= duyuru.baslik %></h5>
                                            <p class="card-text text-muted mb-4" style="height: 4.5em; overflow: hidden;">
                                                <%= duyuru.icerik %>
                                            </p>
                                            <a href="/duyurular/<%= duyuru._id %>" class="btn btn-warning text-white rounded-pill px-4">
                                                Devamını Oku <i class="fas fa-arrow-right ms-2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

                <!-- Normal Duyurular -->
                <% const normalDuyurular = duyurular.filter(d => d.onemDurumu === 'normal'); %>
                <% if (normalDuyurular.length > 0) { %>
                    <div>
                        <div class="d-flex align-items-center mb-4">
                            <div class="bg-primary rounded-circle p-2 me-2">
                                <i class="fas fa-bullhorn text-white"></i>
                            </div>
                            <h4 class="text-primary mb-0">Diğer Duyurular</h4>
                        </div>
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            <% normalDuyurular.forEach(function(duyuru) { %>
                                <div class="col">
                                    <div class="card h-100 shadow-sm border-0 rounded-4 hover-shadow">
                                        <% if (duyuru.gorsel) { %>
                                            <img src="<%= duyuru.gorsel %>" class="card-img-top rounded-top-4" alt="<%= duyuru.baslik %>" style="height: 200px; object-fit: cover;">
                                        <% } %>
                                        <div class="card-body p-4">
                                            <div class="d-flex align-items-center mb-3">
                                                <span class="badge bg-primary me-2">Duyuru</span>
                                                <small class="text-muted">
                                                    <i class="far fa-clock me-1"></i>
                                                    <%= new Date(duyuru.olusturmaTarihi).toLocaleDateString('tr-TR') %>
                                                </small>
                                            </div>
                                            <h5 class="card-title mb-3"><%= duyuru.baslik %></h5>
                                            <p class="card-text text-muted mb-4" style="height: 4.5em; overflow: hidden;">
                                                <%= duyuru.icerik %>
                                            </p>
                                            <a href="/duyurular/<%= duyuru._id %>" class="btn btn-primary rounded-pill px-4">
                                                Devamını Oku <i class="fas fa-arrow-right ms-2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-bullhorn fa-4x text-muted"></i>
                    </div>
                    <h4>Henüz duyuru bulunmuyor</h4>
                    <p class="text-muted">Yakında yeni duyurular eklenecektir.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.hover-shadow {
    transition: all 0.3s ease;
}
.hover-shadow:hover {
    transform: translateY(-5px);
    box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
}
</style> 