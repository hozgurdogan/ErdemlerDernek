<%- contentFor('body') %>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="mb-0">Duyurular</h2>
        </div>
        <div class="card-body">
            <% if (duyurular.length === 0) { %>
                <div class="text-center py-5">
                    <i class="fas fa-bullhorn fa-3x text-muted mb-3"></i>
                    <h4>Henüz duyuru bulunmuyor</h4>
                    <p class="text-muted">Yakında yeni duyurular eklenecektir.</p>
                </div>
            <% } else { %>
                <div class="row">
                    <% duyurular.forEach(function(duyuru) { %>
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title"><%= duyuru.baslik %></h5>
                                    <p class="card-text text-muted small mb-2">
                                        <i class="fas fa-user"></i> 
                                        <%= duyuru.ekleyenAdmin ? `${duyuru.ekleyenAdmin.isim} ${duyuru.ekleyenAdmin.soyisim}` : 'Admin' %>
                                    </p>
                                    <p class="card-text text-muted small mb-3">
                                        <i class="fas fa-clock"></i> 
                                        <%= new Date(duyuru.createdAt).toLocaleString('tr-TR', {
                                            dateStyle: 'medium',
                                            timeStyle: 'short'
                                        }) %>
                                    </p>
                                    <p class="card-text"><%= duyuru.icerik.substring(0, 150) %>...</p>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a href="/duyurular/<%= duyuru._id %>" class="btn btn-primary btn-sm">
                                        Devamını Oku
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>
</div> 