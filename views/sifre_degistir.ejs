<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="text-center mb-4">Şifre Değiştir</h2>

                    <% if (messages.success && messages.success.length > 0) { %>
                        <div class="alert alert-success">
                            <%= messages.success %>
                        </div>
                    <% } %>
                    
                    <% if (messages.error && messages.error.length > 0) { %>
                        <div class="alert alert-danger">
                            <%= messages.error %>
                        </div>
                    <% } %>

                    <form action="/profil/sifre-degistir" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="mevcutSifre" class="form-label">Mevcut Şifre</label>
                            <input type="password" class="form-control" id="mevcutSifre" name="mevcutSifre" required>
                            <div class="invalid-feedback">
                                Mevcut şifrenizi giriniz
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="yeniSifre" class="form-label">Yeni Şifre</label>
                            <input type="password" class="form-control" id="yeniSifre" name="yeniSifre" 
                                   minlength="6" required>
                            <div class="invalid-feedback">
                                Yeni şifre en az 6 karakter olmalıdır
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="yeniSifreTekrar" class="form-label">Yeni Şifre Tekrar</label>
                            <input type="password" class="form-control" id="yeniSifreTekrar" name="yeniSifreTekrar" required>
                            <div class="invalid-feedback">
                                Şifreler eşleşmiyor
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-key"></i> Şifreyi Değiştir
                            </button>
                            <a href="/profil" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Profile Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Bootstrap form validasyonu için
(function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms)
        .forEach(function (form) {
            form.addEventListener('submit', function (event) {
                // Şifre eşleşme kontrolü
                var yeniSifre = document.getElementById('yeniSifre')
                var yeniSifreTekrar = document.getElementById('yeniSifreTekrar')
                if (yeniSifre.value !== yeniSifreTekrar.value) {
                    event.preventDefault()
                    event.stopPropagation()
                    yeniSifreTekrar.setCustomValidity('Şifreler eşleşmiyor')
                } else {
                    yeniSifreTekrar.setCustomValidity('')
                }

                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
})()
</script> 